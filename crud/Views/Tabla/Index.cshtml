@model List<crud.Models.TablaModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<a href="~/Tabla/New" class="btn btn-success">new</a>


<div class="container-fluid">

    <table class="table table-hover">
        <tr>
            <td>id</td>
            <td>nombre</td>
            <td>correo</td>
            <td>fecha</td>
            <td>Acciones</td>
        </tr>
        @foreach (var t in Model)
        {
    <tr>
        <td>@t.id</td>
        <td>@t.nombre</td>
        <td>@t.correo</td>
        <td>@t.fecha</td>
        <td>
            <a href="~/Tabla/Eliminar/@t.id">X</a>
            <a href="~/Tabla/Edit/@t.id">edit</a>
        </td>
    </tr>

        }
    </table>
</div>

